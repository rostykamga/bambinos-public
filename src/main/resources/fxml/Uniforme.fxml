<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="-Infinity" minWidth="-Infinity" stylesheets="@../styles/home.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lesbambinos.controller.uniform.UniformController">
   <children>
      <TabPane fx:id="tabpane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
          <Tab text="Commandes">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0">
                     <children>
                        <HBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0" spacing="15.0">
                                       <children>
                                          <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <HBox alignment="CENTER_LEFT" prefHeight="40.0" HBox.hgrow="NEVER">
                                                   <children>
                                                      <Label text="Etat Paiment:" />
                                                   </children>
                                                </HBox>
                                                <RadioButton fx:id="allPaidFilter" mnemonicParsing="false" onAction="#filterDataAction" selected="true" text="Toutes">
                                                   <toggleGroup>
                                                      <ToggleGroup fx:id="group1" />
                                                   </toggleGroup>
                                                </RadioButton>
                                                <RadioButton fx:id="paidFIlter" mnemonicParsing="false" onAction="#filterDataAction" selected="true" text="Payées" toggleGroup="$group1" />
                                                <RadioButton fx:id="unpaidFilter" mnemonicParsing="false" onAction="#filterDataAction" text="Non Payées" toggleGroup="$group1" />
                                             </children>
                                          </HBox>
                                          <HBox alignment="CENTER" layoutX="777.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0" spacing="10.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <HBox alignment="CENTER_LEFT" prefHeight="40.0">
                                                   <children>
                                                      <Label text="Etat Livraison:" />
                                                   </children>
                                                </HBox>
                                                <RadioButton fx:id="allDeliveredFilter" mnemonicParsing="false" onAction="#filterDataAction" selected="true" text="Toutes">
                                                   <toggleGroup>
                                                      <ToggleGroup fx:id="group2" />
                                                   </toggleGroup>
                                                </RadioButton>
                                                <RadioButton fx:id="deliveredFilter" mnemonicParsing="false" onAction="#filterDataAction" text="Livrées" toggleGroup="$group2" />
                                                <RadioButton fx:id="undeliveredFilter" mnemonicParsing="false" onAction="#filterDataAction" selected="true" text="Non Livrées" toggleGroup="$group2" />
                                             </children>
                                          </HBox>
                                       </children>
                                    </HBox>
                                    <TableView fx:id="ordersTableview" styleClass="table" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                                      <columns>
                                        <TableColumn fx:id="registrationColumn" maxWidth="130.0" minWidth="75.0" prefWidth="-1.0" text="Matricule" />
                                          <TableColumn fx:id="studentFullnameColumn" maxWidth="200.0" minWidth="75.0" prefWidth="-1.0" text="Nom(s)" />
                                        <TableColumn fx:id="classroomColumn" maxWidth="150.0" minWidth="75.0" prefWidth="-1.0" text="Classe" />
                                          <TableColumn fx:id="uniformTypeColumn" maxWidth="150.0" minWidth="75.0" prefWidth="-1.0" text="Type" />
                                          <TableColumn fx:id="uniformSizeColumn" minWidth="75.0" prefWidth="-1.0" text="Taille" />
                                          <TableColumn fx:id="uniformGenderColumn" maxWidth="100.0" minWidth="75.0" prefWidth="-1.0" text="Genre" />
                                          <TableColumn fx:id="quantityColumn" maxWidth="100.0" minWidth="75.0" prefWidth="-1.0" text="Quantité" />
                                          <TableColumn fx:id="paidColumn" maxWidth="100.0" minWidth="75.0" prefWidth="-1.0" text="Payé?" />
                                          <TableColumn fx:id="deliveredColumn" maxWidth="100.0" minWidth="75.0" prefWidth="-1.0" text="Livré" />
                                          <TableColumn fx:id="orderDateColumn" minWidth="75.0" prefWidth="-1.0" text="Date" />
                                          <TableColumn fx:id="deliveryDate" minWidth="75.0" prefWidth="-1.0" text="Livraison" />
                                          <TableColumn fx:id="orderSavingEmployee" minWidth="75.0" prefWidth="-1.0" text="Enregistreur" />
                                          <TableColumn fx:id="orderDeliveryEmployee" minWidth="75.0" prefWidth="-1.0" text="Livreur" />
                                      </columns>
                                    </TableView>
                                    <HBox alignment="CENTER" prefHeight="50.0" VBox.vgrow="NEVER">
                                       <children>
                                          <Button fx:id="deliverOrderButton" mnemonicParsing="false" onAction="#deliverOrderAction" text="Livrer" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab text="Stock">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <TableView fx:id="uniformsTableview" styleClass="table" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                                <columns>
                                  <TableColumn fx:id="idColumn" maxWidth="60.0" minWidth="75.0" prefWidth="-1.0" text="Id" />
                                  <TableColumn fx:id="typeColumn" minWidth="75.0" prefWidth="-1.0" text="Type" />
                                    <TableColumn fx:id="sizeColumn" minWidth="75.0" prefWidth="-1.0" text="Taille" />
                                    <TableColumn fx:id="genderColumn" minWidth="75.0" prefWidth="-1.0" text="Genre" />
                                    <TableColumn fx:id="uniformQuantityColumn" minWidth="75.0" prefWidth="-1.0" text="Qté en Stock" />
                                    <TableColumn fx:id="uniformUnitPriceColumn" minWidth="75.0" prefWidth="-1.0" text="P.U  Vente" />
                                    <TableColumn fx:id="uniformPurchasePriceColumn" minWidth="75.0" prefWidth="-1.0" text="P.U Confection" />
                                    <TableColumn fx:id="downstockColumn" minWidth="75.0" prefWidth="-1.0" text="Stock Min" />
                                    <TableColumn fx:id="upstockColumn" minWidth="75.0" prefWidth="-1.0" text="Stock Max" />
                                </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                              <HBox alignment="CENTER" prefHeight="50.0" spacing="10.0" VBox.vgrow="NEVER">
                                 <children>
                                    <Button fx:id="editUniformButton" mnemonicParsing="false" onAction="#editUniformAction" text="Modifier" />
                                    <Button fx:id="purchaseUniformButton" mnemonicParsing="false" onAction="#purchaseUniformAction" text="Ordonner La Confection" />
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
          <Tab styleClass="ta" text="Ordres de Confection">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <HBox layoutX="75.0" layoutY="165.0" prefHeight="100.0" prefWidth="200.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <VBox prefWidth="220.0" spacing="10.0">
                                 <children>
                                    <VBox VBox.vgrow="ALWAYS">
                                       <children>
                                          <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" styleClass="section-header">
                                             <children>
                                                <Label styleClass="section-header-label" text="Types uniforme">
                                                   <HBox.margin>
                                                      <Insets left="10.0" />
                                                   </HBox.margin>
                                                </Label>
                                             </children>
                                          </HBox>
                                          <ListView fx:id="uniformTypesListview" VBox.vgrow="ALWAYS" />
                                          <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="200.0" spacing="5.0" styleClass="main-button-bar">
                                             <children>
                                                <Button fx:id="addUniformTypeButton" mnemonicParsing="false" onAction="#addUniformTypeAction" styleClass="main-button">
                                                   <graphic>
                                                      <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                                         <image>
                                                            <Image url="@../images/add.png" />
                                                         </image>
                                                      </ImageView>
                                                   </graphic>
                                                </Button>
                                                <Button fx:id="editUniformTypeButton" mnemonicParsing="false" onAction="#editUniformTypeAction" styleClass="main-button">
                                                   <graphic>
                                                      <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                                         <image>
                                                            <Image url="@../images/edit.png" />
                                                         </image>
                                                      </ImageView>
                                                   </graphic>
                                                </Button>
                                                <Button fx:id="deleteUniformTypeButton" mnemonicParsing="false" onAction="#deleteUniformTypeAction" styleClass="main-button">
                                                   <graphic>
                                                      <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                                         <image>
                                                            <Image url="@../images/remove.png" />
                                                         </image>
                                                      </ImageView>
                                                   </graphic>
                                                </Button>
                                             </children>
                                          </HBox>
                                       </children>
                                    </VBox>
                                    <VBox layoutX="10.0" layoutY="10.0" VBox.vgrow="ALWAYS">
                                       <children>
                                          <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" styleClass="section-header">
                                             <children>
                                                <Label styleClass="section-header-label" text="Tailles D'uniforme">
                                                   <HBox.margin>
                                                      <Insets left="10.0" />
                                                   </HBox.margin>
                                                </Label>
                                             </children>
                                          </HBox>
                                          <ListView fx:id="uniformSizesListview" VBox.vgrow="ALWAYS" />
                                          <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="200.0" spacing="5.0" styleClass="main-button-bar">
                                             <children>
                                                <Button fx:id="addUniformSizeButton" mnemonicParsing="false" onAction="#addUniformSizeAction" styleClass="main-button">
                                                   <graphic>
                                                      <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                                         <image>
                                                            <Image url="@../images/add.png" />
                                                         </image>
                                                      </ImageView>
                                                   </graphic>
                                                </Button>
                                                <Button fx:id="editUniformSizeButton" mnemonicParsing="false" onAction="#editUniformSizeAction" styleClass="main-button">
                                                   <graphic>
                                                      <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                                         <image>
                                                            <Image url="@../images/edit.png" />
                                                         </image>
                                                      </ImageView>
                                                   </graphic>
                                                </Button>
                                                <Button fx:id="deleteUniformSizeButton" mnemonicParsing="false" onAction="#deleteUniformSizeAction" styleClass="main-button">
                                                   <graphic>
                                                      <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                                         <image>
                                                            <Image url="@../images/remove.png" />
                                                         </image>
                                                      </ImageView>
                                                   </graphic>
                                                </Button>
                                             </children>
                                          </HBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                              <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <TableView fx:id="uniformPurchasesTable" styleClass="table" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                                      <columns>
                                        <TableColumn fx:id="purchaseIdColumn" maxWidth="60.0" minWidth="75.0" prefWidth="-1.0" text="Id" />
                                        <TableColumn fx:id="purchaseUniformColumn" minWidth="75.0" prefWidth="-1.0" text="Uniforme" />
                                          <TableColumn fx:id="purchaseQuantityColumn" minWidth="75.0" prefWidth="-1.0" text="Qté" />
                                          <TableColumn fx:id="purchaseUnitPriceColumn" minWidth="75.0" prefWidth="-1.0" text="P.U" />
                                          <TableColumn fx:id="purchaseTotalColumn" minWidth="75.0" prefWidth="-1.0" text="Total" />
                                          <TableColumn fx:id="purchaseStatusColumn" minWidth="75.0" prefWidth="-1.0" text="Etat" />
                                          <TableColumn fx:id="purchaseDateColumn" minWidth="75.0" prefWidth="-1.0" text="Date" />
                                          <TableColumn fx:id="purchaseReceptionColumn" minWidth="75.0" prefWidth="-1.0" text="Reception" />
                                          <TableColumn fx:id="purchaserColumn" minWidth="75.0" prefWidth="-1.0" text="Ordonateur" />
                                          <TableColumn fx:id="receptorColumn" minWidth="75.0" prefWidth="-1.0" text="Receptionneur" />
                                      </columns>
                                       <columnResizePolicy>
                                          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                       </columnResizePolicy>
                                    </TableView>
                                    <HBox alignment="CENTER" prefHeight="50.0" spacing="10.0" VBox.vgrow="NEVER">
                                       <children>
                                          <Button fx:id="markAsReceivedButton" mnemonicParsing="false" onAction="#markAsReceivedAction" text="Marquer Comme Reçu" />
                                          <Button fx:id="cancelPurchaseButton" mnemonicParsing="false" onAction="#cancelPurchaseAction" text="Annuler l'Ordre" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                     </children></AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="-Infinity" minWidth="-Infinity" stylesheets="@../styles/home.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lesbambinos.controller.caisse.CaisseController">
   <children>
      <BorderPane VBox.vgrow="ALWAYS">
         <top>
            <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" styleClass="hbox-header" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="pageName" styleClass="hbox-title">
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </Label>
                  <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="userLabel" alignment="CENTER" prefWidth="200.0" text="Label">
                           <HBox.margin>
                              <Insets right="20.0" />
                           </HBox.margin>
                        </Label>
                        <Button mnemonicParsing="false" onAction="#logoutAction" prefHeight="30.0" prefWidth="30.0" styleClass="logout-button">
                           <HBox.margin>
                              <Insets right="15.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </HBox>
         </top>
         <left>
            <VBox fx:id="drawerContainer" minHeight="-Infinity" minWidth="-Infinity" BorderPane.alignment="CENTER" />
         </left>
         <center>
            <StackPane styleClass="vbox-panel" BorderPane.alignment="CENTER">
               <children>
                  <VBox>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                          <tabs>
                            <Tab text="Entrées">
                              <content>
                                <AnchorPane minHeight="-Infinity" minWidth="-Infinity">
                                       <children>
                                          <HBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                             <children>
                                                <VBox minHeight="-Infinity" minWidth="-Infinity" prefWidth="400.0" styleClass="product-vbox">
                                                   <children>
                                                      <TextField fx:id="searchField" layoutX="14.0" layoutY="14.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" promptText="Rechercher" styleClass="search-field">
                                                         <VBox.margin>
                                                            <Insets bottom="5.0" />
                                                         </VBox.margin>
                                                      </TextField>
                                                      <TableView id="student-table" fx:id="studentTableview" layoutX="14.0" layoutY="45.0" minHeight="-Infinity" minWidth="-Infinity" prefWidth="200.0" VBox.vgrow="ALWAYS">
                                                         <columns>
                                                            <TableColumn fx:id="studentColumn" editable="false" prefWidth="75.0" text="Elèves" />
                                                         </columns>
                                                         <columnResizePolicy>
                                                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                         </columnResizePolicy>
                                                         <styleClass>
                                                            <String fx:value="table" />
                                                            <String fx:value="accessible-tableview" />
                                                         </styleClass>
                                                      </TableView>
                                                   </children>
                                                   <HBox.margin>
                                                      <Insets />
                                                   </HBox.margin>
                                                </VBox>
                                                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                                                   <children>
                                                      <VBox spacing="5.0" VBox.vgrow="NEVER">
                                                         <children>
                                                            <HBox alignment="CENTER_LEFT" spacing="20.0" VBox.vgrow="NEVER">
                                                               <children>
                                                                  <Label prefWidth="120.0" text="Matricule" />
                                                                  <TextField fx:id="matriculeField" editable="false" HBox.hgrow="ALWAYS" />
                                                               </children>
                                                            </HBox>
                                                            <HBox alignment="CENTER_LEFT" spacing="20.0" VBox.vgrow="NEVER">
                                                               <children>
                                                                  <Label prefWidth="120.0" text="Noms" />
                                                                  <TextField fx:id="studentName" editable="false" HBox.hgrow="ALWAYS" />
                                                               </children>
                                                            </HBox>
                                                            <HBox alignment="CENTER_LEFT" spacing="20.0" VBox.vgrow="NEVER">
                                                               <children>
                                                                  <Label prefWidth="120.0" text="Classe" />
                                                                  <TextField fx:id="classeField" editable="false" HBox.hgrow="ALWAYS" />
                                                               </children>
                                                            </HBox>
                                                         </children>
                                                      </VBox>
                                                      <VBox VBox.vgrow="ALWAYS">
                                                         <children>
                                                            <TreeView fx:id="tuitionTree" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                                                         </children>
                                                      </VBox>
                                                      <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="475.0" spacing="20.0" VBox.vgrow="NEVER">
                                                         <children>
                                                            <Label prefWidth="120.0" text="Net à Payer" />
                                                            <TextField fx:id="partialTotalField" alignment="CENTER_RIGHT" editable="false" styleClass="total" text="0.00" HBox.hgrow="ALWAYS" />
                                                         </children>
                                                      </HBox>
                                                      <HBox alignment="CENTER" prefHeight="45.0" spacing="10.0" VBox.vgrow="NEVER">
                                                         <children>
                                                            <Button fx:id="paymentButton" defaultButton="true" disable="true" mnemonicParsing="false" onAction="#paymentAction" prefWidth="120.0" text="Encaisser" />
                                                            <Button fx:id="cancelButton" cancelButton="true" disable="true" mnemonicParsing="false" onAction="#cancelAction" prefWidth="120.0" text="Annuler" />
                                                         </children>
                                                      </HBox>
                                                   </children>
                                                </VBox>
                                             </children>
                                             <padding>
                                                <Insets top="5.0" />
                                             </padding>
                                          </HBox>
                                       </children>
                                    </AnchorPane>
                              </content>
                            </Tab>
                            <Tab text="Sorties">
                              <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                              </content>
                            </Tab>
                              <Tab text="Bilans">
                                <content>
                                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                                </content>
                              </Tab>
                          </tabs>
                        </TabPane>
                     </children>
                  </VBox>
                  <VBox fx:id="progressPane" alignment="CENTER" visible="false">
                     <children>
                        <ProgressIndicator prefHeight="300.0" prefWidth="300.0" />
                     </children>
                  </VBox>
               </children>
            </StackPane>
         </center>
      </BorderPane>
   </children>
</VBox>
